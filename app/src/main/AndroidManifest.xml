<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.auburn.weagle.nasa">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".NasaApplication"
        android:allowBackup="true"
        android:icon="@drawable/launcher_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FunOneActivity"/>
        <activity android:name=".activity.FunTwoActivity"/>
        <activity android:name=".activity.FunThreeActivity"/>
        <activity android:name=".activity.FunFourActivity"/>
        <activity android:name=".activity.ResultActivity"/>
        <activity android:name=".activity.DetailsActivity"/>
        <activity android:name=".activity.DescriptionActivity"/>

    </application>

</manifest>